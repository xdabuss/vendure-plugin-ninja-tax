{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "strict": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "types": ["node"],
        "declaration": true,
        "outDir": "dist",
        "strictPropertyInitialization": true
    },
    "include": ["src/"],
    "exclude": ["src/ui/*"]
}
