{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "target": "es2019",
        "strict": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "types": ["node"],
        "outDir": "./dist"
    },
    "include": ["src/"]
}
